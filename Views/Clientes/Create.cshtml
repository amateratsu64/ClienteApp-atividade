@model ClienteApp.Models.Cliente

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Cadastrar Cliente</h1>
<h4 class="text-center">Informações do Cliente</h4>
<hr />

<div class="row">
    <div class="col-md-8 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Grupo de Nomes -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NomeCompleto" class="control-label">Nome Completo: <span class="text-danger">*</span></label>
                        <input asp-for="NomeCompleto" class="form-control" />
                        <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NomeMae" class="control-label">Nome da Mãe: <span class="text-danger">*</span></label>
                        <input asp-for="NomeMae" class="form-control" />
                        <span asp-validation-for="NomeMae" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NomePai" class="control-label">Nome do Pai: <span class="text-danger">*</span></label>
                        <input asp-for="NomePai" class="form-control" />
                        <span asp-validation-for="NomePai" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Grupo de Documentos -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="RG" class="control-label">RG: <span class="text-danger">*</span></label>
                        <input asp-for="RG" class="form-control" />
                        <span asp-validation-for="RG" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CPF" class="control-label">CPF: <span class="text-danger">*</span></label>
                        <input asp-for="CPF" class="form-control" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DataNascimento" class="control-label">Data de Nascimento: <span class="text-danger">*</span></label>
                        <input asp-for="DataNascimento" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Grupo de Endereço -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CEP" class="control-label">CEP: <span class="text-danger">*</span></label>
                        <input asp-for="CEP" class="form-control" />
                        <span asp-validation-for="CEP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label">Cidade: <span class="text-danger">*</span></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Bairro" class="control-label">Bairro: <span class="text-danger">*</span></label>
                        <input asp-for="Bairro" class="form-control" />
                        <span asp-validation-for="Bairro" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Logradouro" class="control-label">Logradouro: <span class="text-danger">*</span></label>
                        <input asp-for="Logradouro" class="form-control" />
                        <span asp-validation-for="Logradouro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="UF" class="control-label">UF: <span class="text-danger">*</span></label>
                        <input asp-for="UF" class="form-control" />
                        <span asp-validation-for="UF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Complemento" class="control-label">Complemento:</label>
                        <input asp-for="Complemento" class="form-control" />
                        <span asp-validation-for="Complemento" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Grupo de Estado Civil -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EstadoCivil" class="control-label">Estado Civil: <span class="text-danger">*</span></label>
                        <input asp-for="EstadoCivil" class="form-control" />
                        <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ImaskScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_ImaskClientesPartial");
    }
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("_CEPPartial");
    }
}
